<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.BookBrowse" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- App background -->
        <item name="android:windowBackground">@color/dark</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">@color/dark</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">@color/dark</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/dark</item>

        <!-- Primary colors -->
        <item name="colorPrimary">@color/dark</item>
        <item name="colorOnPrimary">@color/dark</item>
        <item name="colorSurface">@color/card_view_dark</item>

        <!-- Text primary colors -->
        <item name="android:textColorPrimary">@color/textPrimaryThemeDark</item>

        <!-- Text secondary colors -->
        <item name="android:textColorSecondary">@color/textSecondaryThemeDark</item>

        <!-- EditText style -->
        <item name="android:editTextStyle">@style/Theme.BookBrowse.EditText</item>
    </style>

    <!-- EditText Theme -->
    <style name="Theme.BookBrowse.EditText">
        <item name="android:colorControlNormal">@color/light</item>
        <item name="android:colorControlActivated">@color/accentGreen</item>
        <item name="android:colorControlHighlight">@color/accentGreen</item>
    </style>
</resources>