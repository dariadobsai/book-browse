<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.BookBrowse" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- App background -->
        <item name="android:windowBackground">@color/light</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">@color/light</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">@color/light</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/light</item>

        <!-- Primary colors -->
        <item name="colorPrimary">@color/light</item>
        <item name="colorOnPrimary">@color/light</item>
        <item name="colorSurface">@color/white</item>

        <!-- Text primary colors -->
        <item name="android:textColorPrimary">@color/textPrimaryThemeLight</item>

        <!-- Text secondary colors -->
        <item name="android:textColorSecondary">@color/textSecondaryThemeLight</item>

        <!-- EditText style -->
        <item name="android:editTextStyle">@style/Theme.BookBrowse.EditText</item>
    </style>

    <!-- EditText Theme -->
    <style name="Theme.BookBrowse.EditText">
        <item name="colorControlNormal">@color/dark</item>
        <item name="colorControlActivated">@color/accentGreen</item>
        <item name="colorControlHighlight">@color/accentGreen</item>
    </style>
</resources>