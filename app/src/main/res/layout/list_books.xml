<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_book_list_size"
        android:layout_margin="@dimen/margin_8x2dp"
        android:elevation="@dimen/elevation"
        app:cardCornerRadius="@dimen/corner_radius">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btn_add_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_8x2dp"
                android:layout_marginTop="@dimen/margin_8dp"
                app:favorite="@{bookViewModel}"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_favorite_outlined"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/desc_add_to_favs" />

            <ImageView
                android:id="@+id/book_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/ic_placeholder"
                android:contentDescription="@string/desc_book_cover" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/margin_8x2dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toStartOf="@id/btn_add_favorite"
                app:layout_constraintStart_toEndOf="@id/book_img"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/book_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/livvic_bold"
                    android:maxLines="2"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="@dimen/text_18sp"
                    app:title="@{bookModel}"
                    tools:text="Title" />

                <TextView
                    android:id="@+id/book_authors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/livvic_regular"
                    android:maxLines="2"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="@dimen/text_18sp"
                    app:authors="@{bookModel}"
                    tools:text="Author" />
            </LinearLayout>

            <TextView
                android:id="@+id/book_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin_8x2dp"
                android:fontFamily="@font/montserrat_bold"
                android:linksClickable="true"
                android:textColor="@color/accentBlue"
                android:textSize="@dimen/text_16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_add_favorite"
                app:layout_constraintStart_toEndOf="@id/book_img"
                app:url="@{bookModel}"
                tools:text="link to the book" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <data>

        <variable
            name="bookModel"
            type="hu.dobszai.bookbrowse.models.Book" />

        <variable
            name="bookViewModel"
            type="hu.dobszai.bookbrowse.viewmodels.BookViewModel" />
    </data>
</layout>