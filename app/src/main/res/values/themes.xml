<resources>
    <style name="Theme.BookBrowse" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/accentBlue</item>
        <item name="colorOnPrimary">@color/light</item>
        <item name="android:textColorPrimary">@color/textPrimaryThemeLight</item>

        <!-- Secondary colors -->
        <item name="android:textColorSecondary">@color/textSecondaryThemeLight</item>
    </style>

    <!-- EditText Theme -->
    <style name="Theme.BookBrowse.EditText">
        <item name="colorControlNormal">@color/dark</item>
        <item name="colorControlActivated">@color/accentGreen</item>
        <item name="colorControlHighlight">@color/accentGreen</item>
    </style>
</resources>